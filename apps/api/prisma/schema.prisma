// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AdminRole {
  OWNER
  MANAGER
}

enum ProductStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}

enum OrderStatus {
  NEW
  CONFIRMED
  IN_PROGRESS
  DONE
  CANCELED
}

enum OrderChannel {
  AS
  LAB
}

enum PaymentMethod {
  MANAGER
}

enum BannerMediaType {
  IMAGE
  VIDEO
}

enum PromoCtaType {
  PRODUCT
  URL
}

enum LabCtaType {
  NONE
  PRODUCT
  URL
}

enum AppEventType {
  PAGE_VIEW
  PRODUCT_VIEW
  ADD_TO_CART
  CHECKOUT_STARTED
  PURCHASE
}

model User {
  id          String   @id @default(cuid())
  telegramId  String   @unique
  username    String?
  firstName   String?
  lastName    String?
  photoUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  admin       Admin?
  orders      Order[]

  @@map("users")
}

model Admin {
  id        String     @id @default(cuid())
  userId    String     @unique
  role      AdminRole
  createdAt DateTime   @default(now())
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("admins")
}

model Category {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  sort      Int      @default(0)
  products  ProductCategory[]

  @@map("categories")
}

model Tag {
  id       String   @id @default(cuid())
  name     String
  slug     String   @unique
  products ProductTag[]

  @@map("tags")
}

model Product {
  id          String          @id @default(cuid())
  title       String
  description String?
  sku         String?         @unique
  price       Int
  currency    String          @default("RUB")
  status      ProductStatus   @default(DRAFT)
  stock       Int             @default(0)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  categories  ProductCategory[]
  tags        ProductTag[]
  images      ProductImage[]
  orderItems  OrderItem[]
  labProducts LabProduct[]

  @@index([sku])
  @@map("products")
}

model ProductCategory {
  id         String   @id @default(cuid())
  productId  String
  categoryId String
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([productId, categoryId])
  @@map("product_categories")
}

model ProductTag {
  id        String  @id @default(cuid())
  productId String
  tagId     String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([productId, tagId])
  @@map("product_tags")
}

model ProductImage {
  id        String  @id @default(cuid())
  productId String
  url       String
  sort      Int     @default(0)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_images")
}

model Order {
  id             String        @id @default(cuid())
  userId         String?       // Nullable for guest checkout
  status         OrderStatus   @default(NEW)
  channel        OrderChannel  @default(AS)
  seq            Int?
  number         String?       @unique
  totalAmount    Int
  currency       String        @default("RUB")
  customerName   String
  customerPhone  String
  customerAddress String?
  comment        String?
  paymentMethod  PaymentMethod @default(MANAGER)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  user           User?         @relation(fields: [userId], references: [id], onDelete: Cascade)
  items          OrderItem[]

  @@index([channel, seq])
  @@index([number])
  @@map("orders")
}

model OrderCounter {
  channel   OrderChannel @id
  value     Int          @default(0)
  updatedAt DateTime     @updatedAt

  @@map("order_counters")
}

model OrderItem {
  id            String  @id @default(cuid())
  orderId       String
  productId     String
  titleSnapshot String
  priceSnapshot Int
  qty           Int
  order         Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product       Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@map("order_items")
}

model Banner {
  id        String         @id @default(cuid())
  title     String
  subtitle  String?
  mediaType BannerMediaType
  mediaUrl  String
  isActive  Boolean        @default(true)
  sort      Int            @default(0)
  promoSlug String
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  @@map("banners")
}

model PromoPage {
  id          String        @id @default(cuid())
  slug        String        @unique
  title       String
  description String?
  isActive    Boolean       @default(true)
  ctaType     PromoCtaType  @default(URL)
  ctaText     String?
  ctaUrl      String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  media       PromoMedia[]

  @@map("promo_pages")
}

model PromoMedia {
  id        String         @id @default(cuid())
  promoId   String
  promo     PromoPage      @relation(fields: [promoId], references: [id], onDelete: Cascade)
  mediaType BannerMediaType
  mediaUrl  String
  sort      Int            @default(0)

  @@map("promo_media")
}

// Analytics Models
model TelegramChannelSnapshot {
  id              String   @id @default(cuid())
  channelId       String   // Telegram channel ID (numeric or @username)
  subscriberCount Int
  snapshotAt      DateTime @default(now())

  @@unique([channelId, snapshotAt])
  @@index([channelId, snapshotAt])
  @@map("telegram_channel_snapshots")
}

model TelegramPost {
  id          String                        @id @default(cuid())
  channelId   String
  messageId   Int                           // Telegram message ID
  date        DateTime                      // Post date from Telegram
  text        String?                       @db.Text
  textExcerpt String?                       @db.VarChar(500) // First 500 chars for display
  views       Int                           @default(0)
  forwards    Int                           @default(0)
  link        String?                       // Deep link to post (t.me/channel/messageId)
  createdAt   DateTime                      @default(now())
  updatedAt   DateTime                      @updatedAt
  snapshots   TelegramPostMetricSnapshot[]

  @@unique([channelId, messageId])
  @@index([channelId, date])
  @@index([views])
  @@map("telegram_posts")
}

model TelegramPostMetricSnapshot {
  id        String   @id @default(cuid())
  postId    String
  post      TelegramPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  views     Int
  forwards  Int
  snapshotAt DateTime @default(now())

  @@unique([postId, snapshotAt])
  @@index([postId, snapshotAt])
  @@map("telegram_post_metric_snapshots")
}

model AppEvent {
  id        String       @id @default(cuid())
  eventType AppEventType
  userId    String?      // Telegram user ID if available
  sessionId String?      // Session identifier
  productId String?      // Product ID if applicable
  source    String?      // Traffic source (e.g., "telegram")
  campaign  String?      // Campaign identifier
  postId    String?      // Telegram post ID if from post
  metadata  Json?        // Additional event metadata
  createdAt DateTime     @default(now())

  @@index([eventType, createdAt])
  @@index([userId, createdAt])
  @@index([productId, createdAt])
  @@index([postId, createdAt])
  @@index([sessionId, createdAt])
  @@map("app_events")
}

// LAB Products
model LabProduct {
  id            String          @id @default(cuid())
  title         String
  subtitle      String?
  description   String?         @db.Text
  price         Int
  currency      String          @default("RUB")
  isActive      Boolean         @default(true)
  sortOrder     Int             @default(0)
  coverMediaType BannerMediaType
  coverMediaUrl String
  ctaType       LabCtaType      @default(NONE)
  ctaProductId  String?
  ctaUrl        String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  gallery       LabProductMedia[]
  ctaProduct    Product?        @relation(fields: [ctaProductId], references: [id], onDelete: SetNull)

  @@index([isActive, sortOrder])
  @@index([createdAt])
  @@map("lab_products")
}

model LabProductMedia {
  id          String       @id @default(cuid())
  labProductId String
  labProduct   LabProduct  @relation(fields: [labProductId], references: [id], onDelete: Cascade)
  type        BannerMediaType
  url         String
  sortOrder   Int          @default(0)
  createdAt   DateTime     @default(now())

  @@index([labProductId, sortOrder])
  @@map("lab_product_media")
}

model Subscription {
  id                     String   @id @default(cuid())
  name                   String
  provider               String?
  lastPaidAt             DateTime
  periodMonths           Int      @default(1)
  remindBeforeDays       Int      @default(1)
  nextDueAt              DateTime
  lastRemindedAt         DateTime?
  lastRemindedForDueAt   DateTime?
  isActive               Boolean  @default(true)
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  @@index([isActive, nextDueAt])
  @@index([nextDueAt])
  @@map("subscriptions")
}

model AdminChatConfig {
  id        Int      @id @default(1)
  chatId    String   // Store as String to handle BigInt safely (Telegram chat IDs can be very large)
  threadId  Int?
  updatedAt DateTime @updatedAt

  @@map("admin_chat_config")
}

