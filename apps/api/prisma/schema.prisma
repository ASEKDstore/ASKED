// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AdminRole {
  OWNER
  MANAGER
}

enum ProductStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}

enum OrderStatus {
  NEW
  CONFIRMED
  IN_PROGRESS
  DONE
  CANCELED
}

enum OrderChannel {
  AS
  LAB
}

enum PaymentMethod {
  MANAGER
}

enum BannerMediaType {
  IMAGE
  VIDEO
}

enum PromoCtaType {
  PRODUCT
  URL
}

enum LabCtaType {
  NONE
  PRODUCT
  URL
}

enum NotificationType {
  ORDER_CREATED
  ORDER_STATUS_CHANGED
  ADMIN_BROADCAST
  ADMIN_DIRECT
}

enum InventoryMovementType {
  IN
  OUT
  ADJUST
}

enum InventoryMovementSourceType {
  ORDER
  MANUAL
  PURCHASE
  RETURN
  WRITE_OFF
}

enum PurchaseStatus {
  DRAFT
  POSTED
  CANCELED
}

enum AppEventType {
  APP_OPEN
  PAGE_VIEW
  PRODUCT_VIEW
  ADD_TO_CART
  CHECKOUT_STARTED
  PURCHASE
}

enum ReviewStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ReviewMediaType {
  IMAGE
  VIDEO
}

enum PoletStatus {
  DRAFT // ЧЕРНОВИК
  RECEIVED // ПОЛУЧЕН
  DISASSEMBLED // РАЗОБРАН
  POSTED // ПРОВЕДЕН
  CANCELED // ОТМЕНЕН
}

enum DeliveryDistributionMethod {
  BY_QUANTITY // ПО_КОЛИЧЕСТВУ
}

enum LabWorkStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum LabChannelPostStatus {
  DRAFT
  PUBLISHED
}

enum LabButtonTarget {
  LAB_HOME
  LAB_CUSTOM
}

enum LabWorkMediaType {
  IMAGE
  VIDEO
}

model User {
  id             String             @id @default(cuid())
  telegramId     String             @unique
  username       String?
  firstName      String?
  lastName       String?
  photoUrl       String?
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
  admin          Admin?
  orders         Order[]
  notifications  UserNotification[]
  reviews        Review[]
  labWorkRatings LabWorkRating[]

  @@map("users")
}

model Admin {
  id        String    @id @default(cuid())
  userId    String    @unique
  role      AdminRole
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("admins")
}

model Category {
  id       String            @id @default(cuid())
  name     String
  slug     String            @unique
  sort     Int               @default(0)
  products ProductCategory[]

  @@map("categories")
}

model Tag {
  id       String       @id @default(cuid())
  name     String
  slug     String       @unique
  products ProductTag[]

  @@map("tags")
}

model Product {
  id                 String              @id @default(cuid())
  title              String
  description        String?
  sku                String?             @unique
  price              Int
  costPrice          Int? // Cost price in cents (nullable for backward compatibility)
  packagingCost      Int? // Packaging cost in cents (nullable for backward compatibility)
  currency           String              @default("RUB")
  status             ProductStatus       @default(DRAFT)
  stock              Int                 @default(0)
  averageRating      Float               @default(0) // Average rating from approved reviews (0-5)
  reviewsCount       Int                 @default(0) // Count of approved reviews
  rating1Count       Int                 @default(0) // Count of approved reviews with rating 1
  rating2Count       Int                 @default(0) // Count of approved reviews with rating 2
  rating3Count       Int                 @default(0) // Count of approved reviews with rating 3
  rating4Count       Int                 @default(0) // Count of approved reviews with rating 4
  rating5Count       Int                 @default(0) // Count of approved reviews with rating 5
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  categories         ProductCategory[]
  tags               ProductTag[]
  images             ProductImage[]
  orderItems         OrderItem[]
  labProducts        LabProduct[]
  inventoryMovements InventoryMovement[]
  PurchaseItem       PurchaseItem[]
  InventoryLot       InventoryLot[]
  reviews            Review[]
  sourcePoletId      String? // исходныйПолетId
  sourcePoziciyaId   String? // исходнаяПозицияПолетаId
  poziciiPoleta      PoziciyaPoleta[] // позицииПолета

  @@index([sku])
  @@map("products")
}

model ProductCategory {
  id         String   @id @default(cuid())
  productId  String
  categoryId String
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([productId, categoryId])
  @@map("product_categories")
}

model ProductTag {
  id        String  @id @default(cuid())
  productId String
  tagId     String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([productId, tagId])
  @@map("product_tags")
}

model ProductImage {
  id        String  @id @default(cuid())
  productId String
  url       String
  sort      Int     @default(0)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("product_images")
}

model Order {
  id              String        @id @default(cuid())
  userId          String? // Nullable for guest checkout
  status          OrderStatus   @default(NEW)
  channel         OrderChannel  @default(AS)
  seq             Int?
  number          String?       @unique
  idempotencyKey  String?       @unique // Client-provided idempotency key for retry safety
  totalAmount     Int
  currency        String        @default("RUB")
  customerName    String
  customerPhone   String
  customerAddress String?
  comment         String?
  paymentMethod   PaymentMethod @default(MANAGER)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  deletedAt       DateTime? // Soft delete timestamp
  deletedBy       String? // Admin user ID who deleted the order (optional)
  user            User?         @relation(fields: [userId], references: [id], onDelete: Cascade)
  items           OrderItem[]
  reviews         Review[]

  @@index([channel, seq])
  @@index([number])
  @@index([idempotencyKey])
  @@index([deletedAt])
  @@map("orders")
}

model OrderCounter {
  channel   OrderChannel @id
  value     Int          @default(0)
  updatedAt DateTime     @updatedAt

  @@map("order_counters")
}

model OrderItem {
  id                  String          @id @default(cuid())
  orderId             String
  productId           String
  titleSnapshot       String
  priceSnapshot       Int
  salePriceAtTime     Int // Snapshot of product.price at order time
  costPriceAtTime     Int? // Snapshot of product.costPrice at order time (legacy, kept for backward compatibility)
  packagingCostAtTime Int? // Snapshot of product.packagingCost at order time
  qty                 Int
  cogsTotal           Int? // FIFO-based total COGS for this order item (sum of lot allocations)
  profitTotal         Int? // Optional stored profit (revenue - cogs - packaging)
  order               Order           @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product             Product         @relation(fields: [productId], references: [id], onDelete: Restrict)
  lotAllocations      LotAllocation[]

  @@map("order_items")
}

model Banner {
  id        String          @id @default(cuid())
  title     String
  subtitle  String?
  mediaType BannerMediaType
  mediaUrl  String
  isActive  Boolean         @default(true)
  sort      Int             @default(0)
  promoSlug String
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  @@map("banners")
}

model PromoPage {
  id          String       @id @default(cuid())
  slug        String       @unique
  title       String
  description String?
  isActive    Boolean      @default(true)
  ctaType     PromoCtaType @default(URL)
  ctaText     String?
  ctaUrl      String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  media       PromoMedia[]

  @@map("promo_pages")
}

model PromoMedia {
  id        String          @id @default(cuid())
  promoId   String
  promo     PromoPage       @relation(fields: [promoId], references: [id], onDelete: Cascade)
  mediaType BannerMediaType
  mediaUrl  String
  sort      Int             @default(0)

  @@map("promo_media")
}

// Analytics Models
model TelegramChannelSnapshot {
  id              String   @id @default(cuid())
  channelId       String // Telegram channel ID (numeric or @username)
  subscriberCount Int
  snapshotAt      DateTime @default(now())

  @@unique([channelId, snapshotAt])
  @@index([channelId, snapshotAt])
  @@map("telegram_channel_snapshots")
}

model TelegramPost {
  id          String                       @id @default(cuid())
  channelId   String
  messageId   Int // Telegram message ID
  date        DateTime // Post date from Telegram
  text        String?                      @db.Text
  textExcerpt String?                      @db.VarChar(500) // First 500 chars for display
  views       Int                          @default(0)
  forwards    Int                          @default(0)
  link        String? // Deep link to post (t.me/channel/messageId)
  createdAt   DateTime                     @default(now())
  updatedAt   DateTime                     @updatedAt
  snapshots   TelegramPostMetricSnapshot[]

  @@unique([channelId, messageId])
  @@index([channelId, date])
  @@index([views])
  @@map("telegram_posts")
}

model TelegramPostMetricSnapshot {
  id         String       @id @default(cuid())
  postId     String
  post       TelegramPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  views      Int
  forwards   Int
  snapshotAt DateTime     @default(now())

  @@unique([postId, snapshotAt])
  @@index([postId, snapshotAt])
  @@map("telegram_post_metric_snapshots")
}

model AppEvent {
  id        String       @id @default(cuid())
  eventType AppEventType
  userId    String? // Telegram user ID if available
  sessionId String? // Session identifier
  productId String? // Product ID if applicable
  source    String? // Traffic source (e.g., "telegram")
  campaign  String? // Campaign identifier
  postId    String? // Telegram post ID if from post
  metadata  Json? // Additional event metadata
  createdAt DateTime     @default(now())

  @@index([eventType, createdAt])
  @@index([userId, createdAt])
  @@index([productId, createdAt])
  @@index([postId, createdAt])
  @@index([sessionId, createdAt])
  @@map("app_events")
}

model AppOpenEvent {
  id            String   @id @default(cuid())
  userId        String   @unique // Telegram user ID (string representation)
  username      String?
  firstOpenedAt DateTime @default(now())
  lastOpenedAt  DateTime @default(now())
  opensCount    Int      @default(1)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([firstOpenedAt])
  @@index([lastOpenedAt])
  @@map("app_open_events")
}

// LAB Products
model LabProduct {
  id             String            @id @default(cuid())
  title          String
  subtitle       String?
  description    String?           @db.Text
  price          Int
  currency       String            @default("RUB")
  isActive       Boolean           @default(true)
  sortOrder      Int               @default(0)
  coverMediaType BannerMediaType
  coverMediaUrl  String
  ctaType        LabCtaType        @default(NONE)
  ctaProductId   String?
  ctaUrl         String?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  gallery        LabProductMedia[]
  ctaProduct     Product?          @relation(fields: [ctaProductId], references: [id], onDelete: SetNull)

  @@index([isActive, sortOrder])
  @@index([createdAt])
  @@map("lab_products")
}

model LabProductMedia {
  id           String          @id @default(cuid())
  labProductId String
  labProduct   LabProduct      @relation(fields: [labProductId], references: [id], onDelete: Cascade)
  type         BannerMediaType
  url          String
  sortOrder    Int             @default(0)
  createdAt    DateTime        @default(now())

  @@index([labProductId, sortOrder])
  @@map("lab_product_media")
}

model Subscription {
  id                   String    @id @default(cuid())
  name                 String
  provider             String?
  lastPaidAt           DateTime
  periodMonths         Int       @default(1)
  remindBeforeDays     Int       @default(1)
  nextDueAt            DateTime
  lastRemindedAt       DateTime?
  lastRemindedForDueAt DateTime?
  isActive             Boolean   @default(true)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  @@index([isActive, nextDueAt])
  @@index([nextDueAt])
  @@map("subscriptions")
}

model AdminChatConfig {
  id        Int      @id @default(1)
  chatId    String // Store as String to handle BigInt safely (Telegram chat IDs can be very large)
  threadId  Int?
  updatedAt DateTime @updatedAt

  @@map("admin_chat_config")
}

model Notification {
  id                String             @id @default(cuid())
  type              NotificationType
  title             String
  body              String
  data              Json? // orderId, orderNumber, deepLink, promoId etc
  createdAt         DateTime           @default(now())
  userNotifications UserNotification[]

  @@index([type, createdAt])
  @@map("notifications")
}

model UserNotification {
  id             String       @id @default(cuid())
  userId         String // FK to User.id
  notificationId String
  notification   Notification @relation(fields: [notificationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  isRead         Boolean      @default(false)
  readAt         DateTime?
  createdAt      DateTime     @default(now())

  @@unique([userId, notificationId])
  @@index([userId, isRead])
  @@index([userId, createdAt])
  @@map("user_notifications")
}

model InventoryMovement {
  id         String                      @id @default(cuid())
  productId  String
  quantity   Int // Positive for IN, negative for OUT, delta for ADJUST
  type       InventoryMovementType
  sourceType InventoryMovementSourceType
  sourceId   String? // Order ID, purchase ID, or null for manual
  note       String? // Optional note for manual movements
  createdAt  DateTime                    @default(now())
  product    Product                     @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([productId, createdAt])
  @@index([sourceType, sourceId])
  @@index([type, createdAt])
  @@map("inventory_movements")
}

model Purchase {
  id           String         @id @default(cuid())
  supplier     String?
  comment      String?
  status       PurchaseStatus @default(DRAFT)
  postedAt     DateTime?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  items        PurchaseItem[]
  InventoryLot InventoryLot[]

  @@index([status, createdAt])
  @@index([postedAt])
  @@map("purchases")
}

model PurchaseItem {
  id         String   @id @default(cuid())
  purchaseId String
  productId  String
  qty        Int
  unitCost   Int // Cost per unit in cents
  purchase   Purchase @relation(fields: [purchaseId], references: [id], onDelete: Cascade)
  product    Product  @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([purchaseId])
  @@index([productId])
  @@map("purchase_items")
}

model InventoryLot {
  id           String          @id @default(cuid())
  productId    String
  purchaseId   String? // Nullable for manual lots or write-offs
  unitCost     Int // Cost per unit in cents
  qtyReceived  Int
  qtyRemaining Int
  receivedAt   DateTime // When purchase was posted or lot created
  createdAt    DateTime        @default(now())
  product      Product         @relation(fields: [productId], references: [id], onDelete: Restrict)
  purchase     Purchase?       @relation(fields: [purchaseId], references: [id], onDelete: SetNull)
  allocations  LotAllocation[]

  @@index([productId, receivedAt])
  @@index([productId, qtyRemaining])
  @@map("inventory_lots")
}

model LotAllocation {
  id          String       @id @default(cuid())
  lotId       String
  orderItemId String? // For sales
  writeOffId  String? // For write-offs
  qty         Int
  unitCost    Int // Snapshot of lot.unitCost at allocation time
  createdAt   DateTime     @default(now())
  lot         InventoryLot @relation(fields: [lotId], references: [id], onDelete: Restrict)
  orderItem   OrderItem?   @relation(fields: [orderItemId], references: [id], onDelete: Cascade)

  @@index([lotId])
  @@index([orderItemId])
  @@index([writeOffId])
  @@map("lot_allocations")
}

model Review {
  id        String        @id @default(cuid())
  productId String
  userId    String
  orderId   String? // Optional, for verified purchase
  rating    Int // 1-5
  text      String?
  status    ReviewStatus  @default(PENDING)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  product   Product       @relation(fields: [productId], references: [id], onDelete: Cascade)
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  order     Order?        @relation(fields: [orderId], references: [id], onDelete: SetNull)
  media     ReviewMedia[]
  reply     ReviewReply?

  @@unique([productId, userId]) // One review per product per user
  @@index([productId, status, createdAt])
  @@index([userId])
  @@index([status, createdAt])
  @@map("reviews")
}

model ReviewMedia {
  id        String          @id @default(cuid())
  reviewId  String
  type      ReviewMediaType // IMAGE | VIDEO
  url       String
  createdAt DateTime        @default(now())
  review    Review          @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  @@index([reviewId])
  @@map("review_media")
}

model ReviewReply {
  id        String   @id @default(cuid())
  reviewId  String   @unique
  adminId   String? // Optional admin user ID
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  review    Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  @@map("review_replies")
}

// LAB Ready Custom Works
model LabWork {
  id          String          @id @default(cuid())
  title       String
  slug        String?         @unique
  description String?         @db.Text
  coverUrl    String?
  ratingAvg   Float           @default(0)
  ratingCount Int             @default(0)
  status      LabWorkStatus   @default(DRAFT)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  media       LabWorkMedia[]
  ratings     LabWorkRating[]

  @@index([status, createdAt])
  @@index([slug])
  @@map("lab_works")
}

model LabWorkMedia {
  id        String           @id @default(cuid())
  labWorkId String
  type      LabWorkMediaType
  url       String
  sort      Int              @default(0)
  labWork   LabWork          @relation(fields: [labWorkId], references: [id], onDelete: Cascade)

  @@index([labWorkId, sort])
  @@map("lab_work_media")
}

model LabWorkRating {
  id        String   @id @default(cuid())
  labWorkId String
  userId    String
  rating    Int // 1..5
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  labWork LabWork @relation(fields: [labWorkId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([labWorkId, userId])
  @@index([labWorkId])
  @@map("lab_work_ratings")
}

model LabChannelPost {
  id                String               @id @default(cuid())
  title             String?
  text              String               @db.Text
  photoUrl          String?
  buttonText        String               @default("Открыть LAB")
  buttonTarget      LabButtonTarget      @default(LAB_HOME)
  status            LabChannelPostStatus @default(DRAFT)
  createdAt         DateTime             @default(now())
  publishedAt       DateTime?
  telegramMessageId String?
  telegramChatId    String?

  @@index([status, createdAt])
  @@map("lab_channel_posts")
}

model AppSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text // JSON string
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("app_settings")
}

model AppSettingsSingleton {
  id                       String   @id @default("singleton")
  globalMaintenanceEnabled Boolean  @default(false)
  updatedAt                DateTime @updatedAt

  @@map("app_settings_singleton")
}

model Polet {
  id                  String                     @id @default(cuid())
  nazvanie            String                     @db.VarChar(255) // название
  status              PoletStatus                @default(DRAFT) // статус
  cenaPoleta          Int // ценаПолета
  dostavka            Int // доставка
  prochieRashody      Int                        @default(0) // прочиеРасходы
  obshayaSumma        Int // общаяСумма
  metodRaspredeleniya DeliveryDistributionMethod @default(BY_QUANTITY) // методРаспределения
  primernoeKolvo      Int? // примерноеКолво (optional, before receiving)
  createdAt           DateTime                   @default(now())
  updatedAt           DateTime                   @updatedAt
  pozicii             PoziciyaPoleta[] // позиции

  @@map("polet")
}

model PoziciyaPoleta {
  id               String   @id @default(cuid())
  poletId          String // полетId
  nazvanie         String   @db.VarChar(255) // название
  kolichestvo      Int // количество
  sebestoimostNaEd Int      @default(0) // себестоимостьНаЕд
  tovarId          String? // товарId
  polet            Polet    @relation(fields: [poletId], references: [id], onDelete: Cascade)
  tovar            Product? @relation(fields: [tovarId], references: [id])

  @@index([poletId])
  @@map("poziciya_poleta")
}
